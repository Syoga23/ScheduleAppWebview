<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyWeb3" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorPrimary">@color/dark_200</item>
        <item name="colorPrimaryVariant">@color/dark_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="statusBarBackground">@color/dark_500</item>
    </style>
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="NormalText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/dark_500</item>
        <item name="android:colorControlNormal">@color/black</item>
    </style>


</resources>